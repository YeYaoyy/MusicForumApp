<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/receivedStickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Stickers"
        android:minWidth="50dp"
        android:layout_constraintBottom_toTopOf="@id/receivedHistory"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintEnd_toStartOf="@id/fromUser"
        android:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/fromUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="From User"
        android:minWidth="100dp"
        android:layout_constraintBottom_toTopOf="@id/receivedHistory"
        android:layout_constraintStart_toEndOf="@id/receivedStickers"
        android:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Sent Time"
        android:layout_constraintBottom_toTopOf="@id/receivedHistory"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintStart_toEndOf="@id/fromUser" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receivedHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="1.0"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@id/receivedStickers" />
    />
</androidx.constraintlayout.widget.ConstraintLayout>