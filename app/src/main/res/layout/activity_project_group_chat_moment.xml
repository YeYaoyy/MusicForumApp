<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectGroupChatMoment">

    <Button
        android:id="@+id/createChatGBtn"
        android:layout_marginTop="128dp"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:backgroundTint="#D2C5DA"
        android:onClick="onClick"
        android:text="Create Chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/join"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/createMomentGBtn"
        android:layout_marginTop="148dp"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#D2C5DA"
        android:onClick="onClick"
        android:text="Create Moment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/join"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/join"
        android:layout_width="116dp"
        android:layout_height="58dp"
        android:backgroundTint="#D2C5DA"
        android:onClick="onClick"
        android:text="Join this group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491"
        tools:ignore="OnClick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="33dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:maxWidth="40dp"
            android:src="@drawable/baseline_description_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Description: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_groupDescription_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>