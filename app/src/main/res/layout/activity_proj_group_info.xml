<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectGroupInfo">


    <TextView
        android:id="@+id/groupname2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="GroupX"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/groupDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Description"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/grpbtShowmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25sp"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:text="Show more..."
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Listed Chats"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <TextView
            android:id="@+id/createChat"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="Create Chat"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatList"
        android:layout_width="match_parent"
        android:layout_height="129dp" />

    <TextView
        android:id="@+id/MomentsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Listed Moments"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <TextView
            android:id="@+id/createMoment"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="Create Moment"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/momentList"
        android:layout_width="match_parent"
        android:layout_height="154dp" />


</LinearLayout>